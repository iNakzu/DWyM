<div class="container mt-5">
    <h2>Panel de administraci√≥n</h2>
    <p>Monto total de ventas: ${{this.totalSales}}</p>
    <a href="/create-product" class="btn btn-success mb-3">Crear nuevo producto</a>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>${{this.price}}</td>
                    <td>{{this.stock}}</td>
                    <td>
                        <a href="/edit-product/{{this.id}}" class="btn btn-warning me-2 mb-2">Editar</a>
                        <a href="" class="btn btn-danger mb-2">Borrar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
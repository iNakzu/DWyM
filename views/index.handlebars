<!-- Productos extraidos desde la data base -->
<div class="container mt-3">
    <div class="row">
        {{#each products}}
        <div class="col-md-3 col-sm-6 col-xs-12 mb-3">
            <div class="card d-flex flex-column">
                <img src="{{this.img}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">${{this.price}}</p>
                    <form action="/add-to-cart" method="POST">
                        <input type="hidden" name="productId" value="{{this.id}}">
                        <button type="submit" class="btn btn-primary mt-auto">AÃ±adir al carrito</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
